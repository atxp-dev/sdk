{
  "name": "@atxp/cloudflare",
  "version": "0.4.0",
  "description": "ATXP Cloudflare - Cloudflare Workers integration for Authorization Token Exchange Protocol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atxp-dev/sdk.git",
    "directory": "packages/atxp-cloudflare"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "vitest run",
    "prepack": "npm run build && npm run typecheck",
    "pack:dry": "npm pack --dry-run"
  },
  "dependencies": {
    "@atxp/common": "0.4.0",
    "@atxp/server": "0.4.0"
  },
  "peerDependencies": {
    "agents": "^0.1.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "@types/node": "^22.13.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "bignumber.js": "^9.1.2",
    "eslint": "^9.32.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.9"
  }
}
