{
  "name": "@atxp/sqlite",
  "version": "0.7.3",
  "description": "ATXP SQLite Database - SQLite platform implementation for Authorization Token Exchange Protocol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atxp-dev/sdk.git",
    "directory": "packages/atxp-sqlite"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "vitest run",
    "test:integration": "vitest run src/sqlite.integration.test.ts --reporter=verbose",
    "prepack": "npm run build && npm run typecheck",
    "pack:dry": "npm pack --dry-run"
  },
  "dependencies": {
    "@atxp/common": "0.7.3",
    "better-sqlite3": "^12.2.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.13.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.9"
  }
}
